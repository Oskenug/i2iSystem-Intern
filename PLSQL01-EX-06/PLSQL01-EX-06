SELECT * FROM HR.EMPLOYEES;
SELECT * FROM HR.DEPARTMENTS;
    
SELECT 
    DEPARTMENTS.DEPARTMENT_NAME 
AS 
    "Department Name",
SUM(EMPLOYEES.SALARY) 
AS 
    "Total Salary"
FROM 
    HR.EMPLOYEES 
INNER JOIN 
    HR.DEPARTMENTS 
ON 
    EMPLOYEES.DEPARTMENT_ID = DEPARTMENTS.DEPARTMENT_ID 
GROUP BY 
    DEPARTMENTS.DEPARTMENT_NAME
ORDER BY 
    (SUM(EMPLOYEES.SALARY))ASC



